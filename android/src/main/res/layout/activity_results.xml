<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.baher.fyeapp.ResultsActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Winners For House #:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:layout_editor_absoluteX="8dp">

            <ImageView
                android:id="@+id/imageView61"
                android:layout_width="0dp"
                android:layout_height="186dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/goldmedal" />

            <ImageView
                android:id="@+id/imageView71"
                android:layout_width="0dp"
                android:layout_height="186dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/silvermedal"/>

            <ImageView
                android:id="@+id/imageView81"
                android:layout_width="0dp"
                android:layout_height="186dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/bronze" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            >

            <TextView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="Person1"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="186dp"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="Person2"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/imageView8"
                android:layout_width="0dp"
                android:layout_height="186dp"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="Person3"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="serif"
            android:text="Ranking:"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:text="The names of people who got 4th, 5th, 6th, etc."
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
